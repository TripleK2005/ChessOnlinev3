@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row align-items-center min-vh-75">
        <div class="col-lg-6 fade-in">
            <h1 class="display-3 fw-bold mb-4">
                Master Strategy <br />
                <span style="color: var(--secondary-color);">Realtime Chess</span>
            </h1>
            <p class="lead text-muted mb-5">
                Experience the classic game in a modern, realtime environment. 
                Challenge friends, climb the leaderboard, and improve your skills with our advanced analysis tools.
            </p>
            <div class="d-flex gap-3">
                <a asp-controller="Game" asp-action="Lobby" class="btn btn-primary btn-lg px-5 rounded-pill shadow-lg">
                    <i class="fa-solid fa-play me-2"></i> Play Now
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg px-5 rounded-pill">
                    Sign Up
                </a>
            </div>
            
            <div class="mt-5 d-flex gap-4 text-muted">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-users fa-2x me-3 text-primary"></i>
                    <div>
                        <h5 class="mb-0 text-white">10k+</h5>
                        <small>Active Players</small>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-bolt fa-2x me-3 text-warning"></i>
                    <div>
                        <h5 class="mb-0 text-white">Fast</h5>
                        <small>Matchmaking</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 d-none d-lg-block fade-in" style="animation-delay: 0.2s;">
            <div class="glass-card p-4 position-relative">
                <!-- Decorative elements -->
                <div class="position-absolute top-0 start-100 translate-middle bg-primary rounded-circle" style="width: 100px; height: 100px; filter: blur(60px); opacity: 0.5;"></div>
                <div class="position-absolute bottom-0 start-0 translate-middle bg-secondary rounded-circle" style="width: 120px; height: 120px; filter: blur(60px); opacity: 0.5;"></div>
                
                <img src="https://images.unsplash.com/photo-1529699211952-734e80c4d42b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" 
                     alt="Chess Board" 
                     class="img-fluid rounded-3 shadow-lg border border-secondary"
                     style="border-opacity: 0.3;">
            </div>
        </div>
    </div>
</div>
